.panel.panel-default.panel-body.text-center.center-block.width{:style => "background-color: #eeeeee"}
  = form_for @user do |f|
    .center-block
      %h3 新用户注册
      = link_to "用户登录", login_path, :class => "right"
      %div
        %dl.input-group
          %dt.input-group-addon= f.label :name, :class => "input_width-1"
          %dd= f.text_field :name, :class => "form-control"
        %dl.input-group
          %dt.input-group-addon
            = f.label :password, :class => "input_width-1"
          %dd
            = f.password_field :password, :class => "form-control"
        %dl.input-group
          %dt.input-group-addon
            = f.label :password_confirmation, :class => "input_width-1"
          %dd
            = f.password_field :password_confirmation, :class => "form-control"
        %dl.input-group
          %dt.input-group-addon
            = f.label :forget_issues
          %dd
            = f.text_field :forget_issues, :class => "form-control"
        %dl.input-group
          %dt.input-group-addon
            = f.label :forget_answer
          %dd
            = f.text_field :forget_answer, :class => "form-control"
        - if @user.errors.any?
          .alert.alert-danger
            = @user.errors.full_messages.first
        %p= f.submit "注册", :class => "btn-default btn btm-primary"